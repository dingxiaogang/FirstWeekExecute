<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sh_image2"
        android:layout_width="120dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/sh_title2"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/sh_image2"
        android:layout_toLeftOf="@id/sh_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/sh_small_image2"
        android:layout_toRightOf="@id/sh_image2"
        android:layout_below="@id/sh_title2"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/sh_desc"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/sh_btn"
        android:layout_below="@id/sh_title2"
        android:layout_toRightOf="@id/sh_small_image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/sh_btn"
        android:src="@mipmap/icon_add"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sh_title2"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>
