<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/parent_rv_image"
        android:layout_width="120dp"
        android:layout_height="90dp" />
    <TextView
        android:id="@+id/parent_rv_title"
        android:textSize="18dp"
        android:layout_toRightOf="@id/parent_rv_image"
        android:textColor="@color/color_000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/parent_rv_author"
        android:textSize="18dp"
        android:layout_below="@id/parent_rv_title"
        android:layout_toRightOf="@id/parent_rv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/parent_rv_niceDate"
        android:textSize="18dp"
        android:layout_below="@id/parent_rv_author"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>