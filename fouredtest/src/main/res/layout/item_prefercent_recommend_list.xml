<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/preference_recommend_image"
        android:layout_width="150dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/preference_recommend_title"
        android:textSize="18dp"
        android:layout_toRightOf="@id/preference_recommend_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/preference_recommend_niceDate"
        android:textSize="18dp"
        android:layout_below="@id/preference_recommend_title"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>