<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/theme_rv_image"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <TextView
        android:id="@+id/theme_rv_award"
        android:text="已开奖"
        android:layout_below="@id/theme_rv_image"
        android:background="@color/color_F2616C"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/theme_rv_title"
        android:textSize="18dp"
        android:layout_below="@id/theme_rv_image"
        android:layout_toRightOf="@id/theme_rv_award"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/theme_rv_niceDate"
        android:textSize="18dp"
        android:layout_below="@id/theme_rv_award"
        android:textColor="@color/color_F2616C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>